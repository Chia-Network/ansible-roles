server {
    listen 80;
    listen [::]:80;

    server_name {{ certbot_domains | join( " " ) }};

    root /dev/null;

    include /etc/nginx/snippets/lets-encrypt-webroot.conf;

    location / {
        rewrite (.*) https://$host$1 permanent;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    root /var/www/{{ cadt_ui_host }}/build;

    server_name {{ certbot_domains | join( " " ) }};

    ssl_certificate /etc/letsencrypt/live/{{ certbot_domains | first }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ certbot_domains | first }}/privkey.pem;

    # SSL configurations from letsencrypt
    include /etc/nginx/snippets/options-ssl-nginx.conf;

    resolver                  1.1.1.1;

{% if basic_authentication %}
    auth_basic              "Access Restricted";
    auth_basic_user_file    /etc/nginx/.htpasswd;
{% else %}
    # No basic authentication
{% endif %}

    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }


    include /etc/nginx/cadt_includes/*.inc;

}
