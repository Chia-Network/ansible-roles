root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4

[*.{yml,yaml,yml.j2,yaml.j2}]
indent_style = space
indent_size = 2

[*.{hcl,hcl.j2}]
indent_style = space
indent_size = 2

# Ignore these
[{healthcheck,rsyslog,LICENSE}]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

[*.{sh,sh.j2}]
indent_style = tab
