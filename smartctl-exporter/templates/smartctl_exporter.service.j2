[Unit]
Description=Smartctl Exporter
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/opt/smartctl_exporter/smartctl_exporter \
    --web.listen-address=:{{ smartctl_exporter_port }} \
    {{ smartctl_exporter_args }}

Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
